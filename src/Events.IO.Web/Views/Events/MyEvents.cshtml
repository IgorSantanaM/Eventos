@model IEnumerable<Events.IO.Application.ViewModels.EventViewModel>


<h1>My Events</h1>
<div class="row">
    <div class="col-md-12">
        <div class="pull-left">
            <a asp-action="Create" class="btn btn-primary">
                <span title="New Event" class="glyphicon glyphicon-plus-sign"></span> New Event

            </a>
        </div>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>    
                @Html.DisplayNameFor(model => model.BeginDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Online)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>

            <td>
                @item.BeginDate.ToString("d")
            </td>

            <td>
                @item.BeginDate.ToString("d")
            </td>

            <td>
                    @{
                        if(item.Free)
                        {
                            @Html.DisplayName("Free")
                        }
                        else
                        {
                            @Html.DisplayFor(modelItem =>item.Price)
                        }
                    }
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Online)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">
                        <span class="glyphicon glyphicon-pencil"></span>
                        
                </a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">
                        <span class="glyphicon glyphicon-search"></span>

                </a> 
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                        <span class="glyphicon glyphicon-trash"></span>
                        
                </a>
            </td>

        </tr>
}
    </tbody>
</table>
